@using Eproject3.Models
@model IEnumerable<Eproject3.Models.Users>
@Styles.Render("~/Content/content/bootstrap.min.css")
@Styles.Render("~/Content/content/light-bootstrap-dashboard.css")
@Styles.Render("~/Content/content/demo.css")
@{
    var user = (Users)Session["User"];
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Users</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <link href="../assets/content/bootstrap.min.css" rel="stylesheet" />
    <link href="../assets/content/light-bootstrap-dashboard.css?v=2.0.0 " rel="stylesheet" />
    <link href="../assets/content/demo.css" rel="stylesheet" />
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-image="../assets/img/sidebar-5.jpg">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="/Home/" class="simple-text">
                        James Theme's Culinary blog
                    </a>
                </div>
                <ul class="nav">
                    <li>
                        <a class="nav-link" href="/Admin/Home/">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>User Profile</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/Admin/Recipes">
                            <i class="nc-icon nc-paper-2"></i>
                            <p>Recipes</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/Admin/Categories">
                            <i class="nc-icon nc-bullet-list-67"></i>
                            <p>Category</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/Admin/Tips">
                            <i class="nc-icon nc-notes"></i>
                            <p>Tips</p>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link" href="/Admin/Contests">
                            <i class="nc-icon nc-air-baloon"></i>
                            <p>Contest</p>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Admin/Users">
                            <i class="nc-icon nc-badge"></i>
                            <p>Users</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg " color-on-scroll="500">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#pablo"> User </a>

                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <ul class="nav navbar-nav mr-auto">
                            <li class="dropdown nav-item">
                                <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                                    <span class="notification">Private task</span>
                                    <span class="d-lg-none">Notification</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <a class="dropdown-item" href="/Admin/Users/ChangePwd">Change password</a>
                                    <a class="dropdown-item" href="/Admin/Users/ChangePhoto">Change profile picture</a>
                                </ul>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/">
                                    <span class="no-icon">Home</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Users/LogOut">
                                    <span class="no-icon">Log out</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            @*Code*@
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card strpied-tabled-with-hover">
                                <div class="card-header ">
                                    <h4 class="card-title">Users List</h4>
                                </div>
                                <div class="card-header ">
                                    <h6 class="card-title">@Html.ActionLink("Create New", "Create")</h6>
                                </div>
                                <div class="card-body table-full-width table-responsive">
                                    <table id="myTable" class="table table-hover table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Profile picture
                                                </th>
                                                <th>
                                                    Phone Number
                                                </th>
                                                <th>
                                                    Password
                                                </th>
                                                <th>
                                                    Name
                                                </th>
                                                <th>
                                                    Expired Date
                                                </th>
                                                <th>
                                                    Packs
                                                </th>
                                                <th>
                                                    Role
                                                </th>
                                                <th>
                                                    Account Number
                                                </th>
                                                <th>
                                                    Action
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <img style="height:100%;width:100%" src="~/images/@item.Img" />
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UPhone)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UPass)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UAdress)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Exp_Date)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Packs.name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Roles.name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.AccNum)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="../Content/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
<script src="../Content/js/core/popper.min.js" type="text/javascript"></script>
<script src="../Content/js/core/bootstrap.min.js" type="text/javascript"></script>
<script src="../Content/js/plugins/bootstrap-switch.js"></script>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
<script src="../Content/js/plugins/chartist.min.js"></script>
<script src="../Content/js/plugins/bootstrap-notify.js"></script>
<script src="../Content/js/light-bootstrap-dashboard.js?v=2.0.0 " type="text/javascript"></script>
<script src="../Content/js/demo.js"></script>
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet">
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>