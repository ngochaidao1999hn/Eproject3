
@{
    ViewBag.Title = "ChangePwd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-12" style="margin-top:100px;margin-bottom:100px;">
    <div class="col-sm-3"></div>
    <div class="col-sm-5 form-style">
        <h2>ChangePwd</h2>
        <form method="post" action="/Users/ChangePwd" >
            Enter your old password here :
            <input type="password" value="@ViewBag.old" name="oldp" /><br />
            Enter your newPassword here:<input type="password" value="@ViewBag.newp" name="newp" /><br />
            <button class="btn btn-default">Confirm</button>
        </form>
    </div>
</div>