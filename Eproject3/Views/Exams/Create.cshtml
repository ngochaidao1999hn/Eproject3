@model Eproject3.Models.Exams

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Choose one of your recipes to paticipate in the contest</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @if (ViewBag.Recipes_id != null)
    {
        <div class="form-group">
            Your Recipes<br />
            <div class="col-md-10">
                @Html.DropDownList("Recipes_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Recipes_id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    }
    else
    {
        <a>Oop.. look like you don't have any recipes</a>
    }

</div>
    <a href="/Exams/Supplement">Or you can add new Recipes</a>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}